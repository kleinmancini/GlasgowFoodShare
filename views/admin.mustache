<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Browse Items | Glasgow Food Share</title>
    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS for navbar -->
    <link href="/css/navbar.css" rel="stylesheet">
    <!-- Bootstrap JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>   
</head>

<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Eighth navbar example">
    <div class="container">
        <a class="navbar-brand" href="/">Glasgow Food Share</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExample07">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/about">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contact">Contact Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-success" href="/addItems">Add Items</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-success" href="/browse">Browse All Items</a>
                </li>
            </ul>
            <ul class="navbar-nav mb-2 mb-lg-0">
                <li class="nav-item">
                    <hr class="dropdown-divider">
                </li>
                <form class="d-flex" action="/logout" method="get">
                    <button class="btn btn-danger" type="submit">Logout</button>
                </form>
            </div>
        </div>
    </nav>

<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-12 mx-auto">
        <h1 class="fw-light">Admin Dashboard</h1>
        <p class="lead text-muted">Manage users, food items, view feedback messages from each user.</p>
      </div>
    </div>
  </section>

  <div class="container">
    {{#users}}
    <div class="row mb-4 bg-light border rounded-3 p-3">
      <div class="col">
        <h2 class="text-capitalize">{{username}}</h2>
        <p class="fst-italic">Email: {{email}}</p>
        <div>
          <h5>Messages:</h5>
          <ul class="list-group">
            {{#messages}}
            <li class="list-group-item">{{message}}</li>
            {{/messages}}
          </ul>
        </div>
        <div class="mt-3">
          <h5>Food Items:</h5>
          {{#foodItems}}
          <div class="d-flex justify-content-between align-items-center border-bottom mb-2 pb-2">
            <span>{{name}} - Quantity: {{quantity}}</span>
            <form action="/remove-item" method="post" class="d-inline">
              <input type="hidden" name="itemId" value="{{_id}}">
              <button type="submit" class="btn btn-danger btn-sm">Remove Item</button>
            </form>
          </div>
          {{/foodItems}}
        </div>
        <form action="/remove-user" method="post" class="mt-3">
          <input type="hidden" name="userId" value="{{_id}}">
          <button type="submit" class="btn btn-warning">Remove User</button>
        </form>
      </div>
    </div>
    {{/users}}
  </div>

</main>



    <footer class="text-body-secondary py-5 border-top">
        <div class="container">
            <p class="float-end mb-1">
                <a href="/admin">Back to top</a>
            </p>
            <p class="mb-1">This Project was completed by Klein Cairney Student ID: S2140472</p>
            <p class="mb-0">Admin Dashboard: <a href="/admin">Admin Link</a></p>
        </div>
    </footer>

</body>
</html>