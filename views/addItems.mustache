<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Browse Items | Glasgow Food Share</title>
    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS for navbar -->
    <link href="/css/navbar.css" rel="stylesheet">
    <!-- Bootstrap JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>   
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Eighth navbar example">
    <div class="container">
        <a class="navbar-brand" href="/">Glasgow Food Share</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExample07">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/about">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contact">Contact Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-success" href="/browse">Browse All Items</a>
                </li>
            </ul>
            <ul class="navbar-nav mb-2 mb-lg-0">
                <li class="nav-item">
                    <hr class="dropdown-divider">
                </li>
            <form class="d-flex" action="/logout" method="get">
                <button class="btn btn-danger" type="submit">Logout</button>
            </form>
        </div>
    </div>
</nav>

<main>

    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Share Your Surplus Food</h1>
                <p class="lead text-muted">Contribute to our community by sharing details about the surplus food items you have. This page enables you to post your contributions, helping to reduce food waste and support local food pantries in our area.</p>
                {{#successMessage}}
                <div class="alert alert-success mt-4" role="alert"> <!-- Added mt-4 for margin top -->
                    {{successMessage}}
                </div>
                {{/successMessage}}
            </div>
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="col-md-6 mx-auto"> <!-- Centered container -->
            <form action="/add-food-item" method="post" enctype="multipart/form-data">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Item Name" required>
                    <label for="name">Item Name</label>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" id="description" name="description" placeholder="Description" required></textarea>
                    <label for="description">Description</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Quantity" required>
                    <label for="quantity">Quantity</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="date" class="form-control" id="expiryDate" name="expiryDate" placeholder="Expiry Date" required min="{{todayDate}}">
                    <label for="expiryDate">Expiry Date</label>
                </div>
                <div class="form-floating mb-3">
                    <select class="form-control" id="status" name="status" required>
                        <option value="">-- Select Status --</option>
                        <option value="Fresh">Fresh</option>
                        <option value="Near Expiry">Near Expiry</option>
                        <option value="Damaged">Damaged</option>
                    </select>
                    <label for="status">Status</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="file" class="form-control" id="image" name="image" required>
                    <label for="image">Item Image</label>
                </div>
                <button type="submit" class="btn btn-primary">Add Item</button>
            </form>
        </div>
    </div>
    
</main>


